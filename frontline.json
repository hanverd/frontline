{
  "notifications": true,
  "paths": {
    "temporary" : ".tmp",
    "source"    : "src",
    "frontend"  : "dist",
    "wordpress" : false
  },
  "ftp_push": {
    "production": {
      "options": {
        "host": "",
        "port": 21,
        "username": "",
        "password": "",
        "dest": ""
      },
      "files": [{
        "expand": true,
        "cwd": "dist",
        "src": ["**"]
      }]
    }
  },
  "rsync": {
    "options": {
      "args": ["--verbose"],
      "exclude": [],
      "recursive": true
    },
    "production": {
      "options": {
        "src": "dist/*",
        "dest": "",
        "host": "user@domain.com",
        "port": 21
      }
    }
  }
}
